<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral80"
    tools:context=".ui.questions.DateQuestionFragment" >

    <EditText
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/standard_height"
        android:ems="10"
        android:hint="@string/dd_text"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="@color/material_dynamic_neutral40"
        app:layout_constraintEnd_toEndOf="@+id/day_text"
        app:layout_constraintStart_toStartOf="@+id/day_text"
        app:layout_constraintTop_toTopOf="@+id/month_input"
        tools:ignore="Autofill" />

    <EditText
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/standard_height"
        android:ems="10"
        android:hint="@string/yyyy_text"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="@color/material_dynamic_neutral40"
        app:layout_constraintEnd_toEndOf="@+id/year_text"
        app:layout_constraintStart_toStartOf="@+id/year_text"
        app:layout_constraintTop_toTopOf="@+id/month_input"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/question_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/to_be_done"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/month_text"
        app:layout_constraintEnd_toEndOf="@+id/question_text_date"
        app:layout_constraintStart_toStartOf="@+id/question_text_date"
        app:layout_constraintTop_toBottomOf="@+id/info_text" />

    <TextView
        android:id="@+id/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/month_text"
        app:layout_constraintTop_toTopOf="@+id/month_text" />

    <TextView
        android:id="@+id/day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_text"
        app:layout_constraintEnd_toStartOf="@+id/month_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/month_text" />

    <Button
        android:id="@+id/button_next_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/next_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_input" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:text="@string/date_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text_date" />

    <EditText
        android:id="@+id/month_input"
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/small_margin"
        android:ems="10"
        android:hint="@string/mm_text"
        android:inputType="number"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColorHint="@color/material_dynamic_neutral40"
        app:layout_constraintEnd_toEndOf="@+id/month_text"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/month_text"
        app:layout_constraintTop_toBottomOf="@+id/month_text"
        tools:ignore="Autofill" />

</androidx.constraintlayout.widget.ConstraintLayout>